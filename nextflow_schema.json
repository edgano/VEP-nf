{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": "VEP Ensembl pipeline",
    "description": "",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "vcf",
                "outdir"
            ],
            "properties": {
                "vcf": {
                    "description": "VCF that will be split. Currently supports sorted and bgzipped file",
                    "type": "string",
                    "default": "${projectDir}/examples/clinvar-testset/input.vcf",
                    "fa_icon": "fas fa-angle-double-right"
                },
                "chros": {
                    "type": "string",                    
                    "description": "Comma-separated list of chromosomes to generate",
                    "default": "1,2",
                    "fa_icon": "fas fa-angle-double-right"
                },
                "cpus": {
                    "type": "integer",
                    "description": "Number of CPUs to use."
                },
                "vep_config": {
                    "type": "string",
                    "description": "VEP config file. Default: nf_config/vep.ini",
                    "default": "${projectDir}/nf_config/vep.ini",
                    "fa_icon": "fas fa-code"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "default": "${projectDir}/outdir",
                    "fa_icon": "fas fa-folder-open"
                },
                "reportdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the reports will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "default": "${projectDir}/reportdir",
                    "fa_icon": "fas fa-folder-open"
                },
                "tracedir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the trace reports will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "default": "${projectDir}/tracedir",
                    "fa_icon": "fas fa-folder-open"
                },
                "singularity_use_pre_cached_images": {
                    "type": "boolean",
                    "description": "Decide to use or not cached images",
                    "default": false
                },
                "email_on_complete": {
                    "type": "string",
                    "description": "Set this parameter to your e-mail address to get a summary e-mail with details of the run sent to you when the workflow exits.",
                    "default": ""
                },
                "email_on_fail": {
                    "type": "string",
                    "description": "An email address to send a summary email to when the pipeline is completed - ONLY sent if the pipeline does not exit successfully.",
                    "default": ""
                }
            }
        },
        "Reports": {
            "title": "Selection of the reports",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "",
            "properties": {
                "timeline": {
                    "type": "object",
                    "properties": {
                        "enabled": { "title": "enabled", "type": "boolean", "default": false }
                    }
                },
                "report": {
                    "type": "object",
                    "properties": {
                        "enabled": { "title": "enabled", "type": "boolean", "default": false }
                    }
                },
                "trace": {
                    "type": "object",
                    "properties": {
                        "enabled": { "title": "enabled", "type": "boolean", "default": false }
                    }
                },
                "dag": {
                    "type": "object",
                    "properties": {
                        "enabled": { "title": "enabled", "type": "boolean", "default": false }
                    }
                }
            }
        }
    }
}
